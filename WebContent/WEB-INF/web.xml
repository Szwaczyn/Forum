<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Forum</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>helloWorld</servlet-name>
  	<servlet-class>javaee.servlets.HelloWorld</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>helloWorldHTML</servlet-name>
  	<servlet-class>javaee.servlets.HelloWorldHTML</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>getFile</servlet-name>
  	<servlet-class>javaee.servlets.GetFile</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>form</servlet-name>
  	<servlet-class>javaee.servlets.Form</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>session</servlet-name>
  	<servlet-class>javaee.servlets.SessionTest</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Attribute</servlet-name>
  	<servlet-class>javaee.servlets.Attribute</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>session</servlet-name>
  	<url-pattern>/session</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>form</servlet-name>
  	<url-pattern>/form</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>form</servlet-name>
  	<url-pattern>/Form</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>helloWorld</servlet-name>
  	<url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>helloWorldHTML</servlet-name>
  	<url-pattern>/helloHTML</url-pattern>
  </servlet-mapping> 
  <servlet-mapping>
  	<servlet-name>getFile</servlet-name>
  	<url-pattern>/file</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Attribute</servlet-name>
  	<url-pattern>/attribute</url-pattern>
  </servlet-mapping>
  
  <listener>
  	<listener-class>javaee.servlets.listeners.ContextListener</listener-class>
  </listener>
  
  <login-config>
  	<auth-method>BASIC</auth-method>
  </login-config>
  <security-role>
  	<role-name>administrator</role-name>
  </security-role>
   <security-role>
  	<role-name>user</role-name>
  </security-role>
  
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>SafetyRule</web-resource-name>
  		<url-pattern>*.jsp</url-pattern>
  		<http-method>GET</http-method>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>administrator</role-name>
  	</auth-constraint>
  	<user-data-constraint>
  		<transport-guarantee>NONE</transport-guarantee>
  	</user-data-constraint>
  </security-constraint>
  
  <filter>
  	<filter-name>filter</filter-name>
  	<filter-class>javaee.servlets.filters.FilterRules</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>filter</filter-name>
  	<url-pattern>/attribute</url-pattern>
  </filter-mapping>
</web-app>